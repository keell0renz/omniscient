// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(uuid())
  user_id     String
  title       String
  description String   @db.Text
  ai_context  String?  @db.Text
  public      Boolean  @default(false)
  created_at  DateTime @default(now())

  imported_from_id String?
  parent           Project?  @relation("Import", fields: [imported_from_id], references: [id], onDelete: SetNull, onUpdate: NoAction)
  children         Project[] @relation("Import")
}

model Node {
  id         String  @id @default(uuid())
  render_id  String  @default(uuid())
  project_id String
  x_pos      Float
  y_pos      Float
  user_id    String
  status     String  @default("default")
  title      String?
  about      String? @db.Text
  ai_context String? @db.Text
}

model Edge {
  id           String @id @default(uuid())
  render_id    String @default(uuid())
  user_id      String
  project_id   String
  source       String
  target       String
  sourceHandle String
  targetHandle String
}
