// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(uuid())
  user_id     String
  title       String
  description String   @db.Text
  ai_context  String?  @db.Text
  public      Boolean  @default(false)
  created_at  DateTime @default(now())

  imported_from_id String?
  parent           Project?  @relation("Import", fields: [imported_from_id], references: [id], onDelete: SetNull, onUpdate: NoAction)
  children         Project[] @relation("Import")



  @@index([id])
}

model Node {
  id         String  @id @default(uuid())
  render_id  String  @default(uuid())
  project_id String
  x_pos      Float
  y_pos      Float
  user_id    String
  status     String  @default("default")
  title      String?
  about      String? @db.Text
  ai_context String? @db.Text

  chats Chat[] @relation("NodeChat")

  @@index([id, project_id, user_id])
  @@index([project_id, user_id])
}

model Edge {
  id           String @id @default(uuid())
  render_id    String @default(uuid())
  user_id      String
  project_id   String
  source       String
  target       String
  sourceHandle String
  targetHandle String

  @@index([id, project_id, user_id])
  @@index([project_id, user_id])
}

model Chat {
  id         String   @id @default(uuid())
  title      String   @default("New Chat")
  created_at DateTime @default(now())

  project_id String
  node_id String
  node    Node   @relation("NodeChat", fields: [node_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  messages Message[] @relation("ChatMessage")
}

model Message {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  role       String
  content    String   @db.Text

  project_id String
  node_id String
  chat_id String

  chat    Chat   @relation("ChatMessage", fields: [chat_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
